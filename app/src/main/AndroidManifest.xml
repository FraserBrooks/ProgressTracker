<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fraserbrooks.progresstracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity

            android:name="com.fraserbrooks.progresstracker.MainActivity"

            android:label="@string/app_name"

            android:theme="@style/AppTheme_Default"

            android:windowSoftInputMode="adjustPan">

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />



                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>

        <activity

            android:name=".trackers.AddTrackerActivity"

            android:label="@string/title_activity_add_tracker"

            android:theme="@style/AppTheme_Default"

            android:parentActivityName=".MainActivity">

        </activity>

        <activity

            android:name="com.fraserbrooks.progresstracker.targets.AddTargetActivity"

            android:label="@string/title_activity_add_target"

            android:theme="@style/AppTheme_Default"

            android:parentActivityName=".MainActivity">

        </activity>

        <activity
            android:name=".trackers.TrackerDetailsActivity"

            android:label="Tracker Details"

            android:theme="@style/AppTheme_Default"

            android:parentActivityName=".MainActivity"

            android:windowSoftInputMode="stateHidden">

        </activity>

    </application>

</manifest>