<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_item_height"
    android:orientation="horizontal"
    android:baselineAligned="false"

    android:paddingTop="@dimen/spacing_small"
    android:paddingStart="@dimen/spacing_small"
    android:paddingEnd="@dimen/spacing_small"

    >

    <include
        layout="@layout/shared_ui_drag_and_drop_button"
        android:id="@+id/footer_enable_drag_and_drop_button"
        android:layout_width="@dimen/normal_item_height"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/spacing_small">

    </include>


    <include
        android:id="@+id/list_footer_add_button_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        layout="@layout/shared_ui_add_item_button"/>

</LinearLayout>