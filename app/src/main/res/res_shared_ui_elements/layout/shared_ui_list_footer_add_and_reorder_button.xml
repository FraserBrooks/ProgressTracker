<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actual_footer_height"
    android:orientation="horizontal"
    android:padding="@dimen/default_item_padding">

    <FrameLayout
        android:id="@+id/list_footer_drag_and_drop_button_layout"
        android:layout_width="@dimen/actual_footer_height"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginEnd="@dimen/default_item_padding"
        android:background="@drawable/shared_ui_clickable_item_background_selector">

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/shared_ui_drag_and_drop_button">

        </include>

    </FrameLayout>


    <include
        android:id="@+id/list_footer_add_button_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        layout="@layout/shared_ui_add_item_button"/>

</LinearLayout>