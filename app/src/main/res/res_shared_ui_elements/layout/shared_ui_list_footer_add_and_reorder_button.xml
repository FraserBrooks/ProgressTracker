<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">


    <FrameLayout
        android:id="@+id/list_footer_drag_and_drop_button_layout"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:padding="16dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/frag_trackers_tracker_item_background_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/list_footer_add_button_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/shared_ui_drag_and_drop_button">

        </include>

    </FrameLayout>




    <include
        android:id="@+id/list_footer_add_button_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/list_footer_drag_and_drop_button_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_footer_drag_and_drop_button_layout"
        app:layout_constraintBottom_toBottomOf="@id/list_footer_drag_and_drop_button_layout"
        layout="@layout/shared_ui_add_item_button"/>

</android.support.constraint.ConstraintLayout>