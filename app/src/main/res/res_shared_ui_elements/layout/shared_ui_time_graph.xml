<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <LinearLayout
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time_graph_axis_tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAppearance="@style/small_text_appearance"

                    tools:text="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/time_graph_axis_tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAppearance="@style/small_text_appearance"

                    tools:text="7" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/time_graph_axis_tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAppearance="@style/small_text_appearance"

                    tools:text="5" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/time_graph_axis_tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="14sp"


                    tools:text="2" />


            </LinearLayout>

            <!-- graph_window -->

            <LinearLayout
                android:id="@+id/graph_window"
                android:layout_height="120dp"
                android:gravity="bottom"

                android:layout_weight="1"


                tools:background="@color/appBG">


                <View
                    android:id="@+id/graph_box_1"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:background="@color/colorAccent"

                    android:layout_weight="1"/>

                <View
                    android:id="@+id/graph_box_2"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@color/colorAccent"

                    android:layout_weight="1"/>

                <View
                    android:id="@+id/graph_box_3"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:background="@color/colorAccent"

                    android:layout_weight="1" />

                <View
                    android:id="@+id/graph_box_4"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:background="@color/colorAccent"

                    android:layout_weight="1" />

                <View
                    android:id="@+id/graph_box_5"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:background="@color/colorAccent"

                    android:layout_weight="1"/>

                <View
                    android:id="@+id/graph_box_6"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:background="@color/colorAccent"

                    android:layout_weight="1" />

                <View
                    android:id="@+id/graph_box_7"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:background="@color/colorAccent"

                    android:layout_weight="1"/>

            </LinearLayout>




            <!-- max_value_text_view -->
            <TextView
                android:id="@+id/time_graph_max_value_tv"
                android:textAppearance="@style/small_text_appearance"
                android:layout_width="wrap_content"
                tools:text="100" />

        </TableRow>

        <TableRow>

            <!-- interval_tv -->
            <TextView
                android:id="@+id/time_graph_interval_tv"

                android:textAppearance="@style/small_text_appearance"

                tools:text="Days:"

                />

            <!-- time_labels / x axis labels-->
            <LinearLayout

                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:id="@+id/time_graph_spacer_1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"

                    />

                <TextView
                    android:id="@+id/time_graph_x_axis_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:textAppearance="@style/small_text_appearance" />

                <View
                    android:id="@+id/time_graph_spacer_2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

                <View
                    android:id="@+id/time_graph_spacer_3"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/time_graph_x_axis_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:textAppearance="@style/small_text_appearance" />

                <View
                    android:id="@+id/time_graph_spacer_4"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/time_graph_spacer_5"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/time_graph_x_axis_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W"
                    android:textAppearance="@style/small_text_appearance" />

                <View
                    android:id="@+id/time_graph_spacer_6"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/time_graph_spacer_7"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/time_graph_x_axis_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:textAppearance="@style/small_text_appearance" />

                <View
                    android:id="@+id/time_graph_spacer_8"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <View
                    android:id="@+id/time_graph_spacer_9"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/time_graph_x_axis_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:textAppearance="@style/small_text_appearance" />


                <View
                    android:id="@+id/time_graph_spacer_10"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <View
                    android:id="@+id/time_graph_spacer_11"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/time_graph_x_axis_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textAppearance="@style/small_text_appearance"/>

                <View
                    android:id="@+id/time_graph_spacer_12"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <View
                    android:id="@+id/time_graph_spacer_13"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/time_graph_x_axis_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textAppearance="@style/small_text_appearance"/>

                <View
                    android:id="@+id/time_graph_spacer_14"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <View
                android:layout_height="2dp"/>

        </TableRow>


    </TableLayout>







</merge>
