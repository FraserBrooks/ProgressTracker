<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Grey box/outline for the spinner -->
    <item
        >
        <shape android:shape="rectangle"
            >
            <stroke
                android:color="?page_background_color"
                android:width="2dp"/>
            <corners android:radius="4dp" />
            <gradient
                android:startColor="?button_color_light"
                android:centerColor="?button_color_mid"
                android:endColor="?button_color_dark"
                android:centerX="1.2">
            </gradient>
        </shape>
    </item>

</layer-list>