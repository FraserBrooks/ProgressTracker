<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape
            android:shape="rectangle">

            <corners android:radius="8dp" />

            <solid android:color="@color/appBG" />


        </shape>

    </item>


    <item
        android:top="18dp"
        android:bottom="18dp"
        android:left="18dp"
        android:right="18dp">
        <rotate
            android:fromDegrees="45">
            <shape
                android:shape="rectangle" >
                <solid
                    android:color="@color/menuItemWhite" />
            </shape>
        </rotate>
    </item>

    <item
        android:top="22dp"
        android:bottom="22dp"
        android:left="10dp"
        android:right="10dp">

        <shape
            android:shape="rectangle">

            <stroke
                android:width="5dp"
                android:color="@color/appBG">
            </stroke>

        </shape>

    </item>



</layer-list>