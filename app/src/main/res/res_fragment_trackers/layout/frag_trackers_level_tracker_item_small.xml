<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    tools:showIn="@layout/frag_trackers_tracker_item">



    <TextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/progress_bar_frame"
        app:layout_constraintStart_toStartOf="@id/progress_bar_frame"
        app:layout_constraintEnd_toStartOf="@id/quantifier_tv"
        tools:text="Guitar Practice" />


    <TextView
        android:id="@+id/quantifier_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:gravity="end"
        android:textAlignment="viewEnd"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/progress_bar_frame"
        app:layout_constraintEnd_toEndOf="@id/progress_bar_frame"
        app:layout_constraintStart_toEndOf="@id/name_tv"
        tools:text="45 - hours" />


    <include
        android:id="@+id/reorder_drag_button_layout"
        layout="@layout/shared_ui_drag_and_drop_button"
        android:layout_width="@dimen/drag_and_drop_button_size"
        android:layout_height="@dimen/drag_and_drop_button_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/progress_bar_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

    </include>

    <!--  progress bar -->
    <include
        android:id="@+id/progress_bar_frame"
        layout="@layout/frag_trackers_progress_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/reorder_drag_button_layout"
        app:layout_constraintTop_toBottomOf="@id/name_tv" />


</android.support.constraint.ConstraintLayout>
