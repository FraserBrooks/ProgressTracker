<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/tracker_item_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:background="@drawable/shared_ui_clickable_item_background_selector">


    <FrameLayout
        android:id="@+id/reorder_drag_button_layout"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="@dimen/activity_half_margin">

        <include
            layout="@layout/shared_ui_drag_and_drop_button" />

    </FrameLayout>



    <com.fraserbrooks.progresstracker.customviews.TrackerView
        android:id="@+id/tracker_root_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>





</LinearLayout>

