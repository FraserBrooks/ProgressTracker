<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/frag_trackers_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shared_ui_rounded_menu_item_color_box"
        android:animateLayoutChanges="true">

        <FrameLayout
            android:id="@+id/reorder_drag_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/small_tracker_layout_frame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone">

            <include
                layout="@layout/shared_ui_reorder_button"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/small_tracker_layout_frame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/reorder_drag_button_layout">

            <include
                android:id="@+id/small_tracker_layout"
                layout="@layout/frag_trackers_level_tracker_item_small" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/expanded_tracker_layout_frame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/small_tracker_layout_frame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/reorder_drag_button_layout">

            <include
                android:id="@+id/expanded_tracker_layout"
                layout="@layout/frag_trackers_level_tracker_item_expanded" />

        </FrameLayout>



    </android.support.constraint.ConstraintLayout>

</FrameLayout>


