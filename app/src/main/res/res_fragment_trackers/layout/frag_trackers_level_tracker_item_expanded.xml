<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/frag_trackers_tracker_item_background_selector"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp"
    tools:showIn="@layout/frag_trackers_tracker_item">

    <!-- Name, progress text views, progress bar, and level icon. onClick = collapse tracker -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/tracker_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            tools:ignore="RtlHardcoded"
            android:layout_marginTop="4dp"
            tools:text="Guitar Practice"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />

        <TextView
            android:id="@+id/quantifier_two_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            tools:ignore="RtlHardcoded"
            tools:text="- 1800 minutes"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_tv" />

        <TextView
            android:id="@+id/quantifier_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            tools:ignore="RtlHardcoded"
            tools:text="- 30 hours"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quantifier_two_tv" />

        <TextView
            android:id="@+id/count_to_max_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            tools:text=" /XXX to master"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/quantifier_tv"
            app:layout_constraintTop_toBottomOf="@id/quantifier_two_tv"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <!-- Level indicator icon -->
        <ImageView
            android:id="@+id/gem_bitmap"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:padding="2dp"
            android:src="@drawable/frag_trackers_gem_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/progress_bar_frame"
            android:contentDescription="@string/level_icon" />

        <!-- Level Text Box -->
        <TextView
            android:id="@+id/text_level_tv"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="@color/textLevelOverlay"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/gem_bitmap"
            app:layout_constraintEnd_toEndOf="@id/gem_bitmap"
            app:layout_constraintStart_toStartOf="@id/gem_bitmap"
            app:layout_constraintTop_toTopOf="@id/gem_bitmap"
            tools:text="34"
            tools:textColor="@color/menuItemWhite" />

        <!--  progress bar -->
        <include
            android:id="@+id/progress_bar_frame"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gem_bitmap"
            app:layout_constraintTop_toBottomOf="@id/quantifier_tv"
            layout="@layout/frag_trackers_progress_bar" />


    </android.support.constraint.ConstraintLayout>


    <Button
        android:id="@+id/top_button_1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="8dp"
        android:background="@drawable/shared_ui_button_background_selector"

        android:text="@string/start_timer"
        android:textSize="14sp"
        android:textColor="@color/default_text_color"
        android:textAllCaps="false"

        app:layout_constraintTop_toBottomOf="@id/tracker_layout_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tracker_layout_top"
        app:layout_constraintEnd_toStartOf="@id/top_button_2"
        />

    <Button
        android:id="@+id/top_button_2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="8dp"
        android:background="@drawable/shared_ui_button_background_selector"

        android:text="@string/plus_15_minutes"
        android:textSize="14sp"
        android:textColor="@color/default_text_color"
        android:textAllCaps="false"

        app:layout_constraintTop_toBottomOf="@id/tracker_layout_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/top_button_1"
        app:layout_constraintEnd_toStartOf="@id/top_button_3"/>

    <Button
        android:id="@+id/top_button_3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="8dp"
        android:background="@drawable/shared_ui_button_background_selector"

        android:text="@string/plus_1_hour"
        android:textSize="14sp"
        android:textColor="@color/default_text_color"
        android:textAllCaps="false"

        app:layout_constraintTop_toBottomOf="@id/tracker_layout_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/top_button_2"
        app:layout_constraintEnd_toStartOf="@id/top_button_4"/>

    <Button
        android:id="@+id/top_button_4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="8dp"
        android:background="@drawable/shared_ui_button_background_selector"

        android:text="@string/more"
        android:textSize="14sp"
        android:textColor="@color/default_text_color"
        android:textAllCaps="false"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/top_button_3"
        app:layout_constraintTop_toBottomOf="@id/tracker_layout_top"/>



</android.support.constraint.ConstraintLayout>