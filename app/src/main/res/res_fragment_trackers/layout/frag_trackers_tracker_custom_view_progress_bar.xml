<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/progress_bar_height"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <include
            layout="@layout/frag_trackers_progress_bar"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="@dimen/tracker_ico_size"
        android:layout_height="match_parent">

        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/tracker_view_next_level_ico"
            android:layout_width="@dimen/tracker_next_level_ico_size"
            android:layout_height="match_parent"

            android:layout_gravity="center"

            app:vector_src="?theme_level_drawable" />

    </FrameLayout>



</LinearLayout>