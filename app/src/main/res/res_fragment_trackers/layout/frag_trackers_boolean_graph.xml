<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/graph_height_small"
    >


    <View
        android:id="@+id/boolean_graph_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_small"
        android:background="?page_background_color"
        android:layout_gravity="center"/>



    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="?page_background_color"
        android:layout_gravity="start"/>


    <View
        android:layout_width="@dimen/spacing_small"
        android:layout_height="match_parent"
        android:background="?page_background_color"
        android:layout_gravity="end"/>

    <LinearLayout
        android:id="@+id/boolean_graph_circle_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="@dimen/spacing_small"
        android:paddingEnd="@dimen/spacing_small"
        android:gravity="center"
        >


        <ImageView
            android:id="@+id/boolean_graph_circle_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/boolean_graph_circle_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/boolean_graph_circle_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/boolean_graph_circle_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/boolean_graph_circle_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/boolean_graph_circle_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/boolean_graph_circle_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>



</merge>