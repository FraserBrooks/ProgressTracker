<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="horizontal"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin">

    <!-- TODO: add border -->
    <!-- TODO: make bar graph compatible with themes -->

    <TextView
        android:id="@+id/bar_graph_text"
        android:layout_width="@dimen/bar_graph_text_width"
        android:layout_height="wrap_content"
        tools:text="Programming"

        android:textAppearance="@style/small_text_appearance"

        android:padding="4sp"
        android:maxLines="1"
        android:gravity="end|center"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="?color_border"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:padding="4dp"
        android:layout_weight="1"
        android:layout_gravity="center">
        <View
            android:id="@+id/bar_graph_colour_rect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_weight="6"
            />
        <View
            android:id="@+id/bar_graph_blank_rect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />
    </LinearLayout>


</LinearLayout>

