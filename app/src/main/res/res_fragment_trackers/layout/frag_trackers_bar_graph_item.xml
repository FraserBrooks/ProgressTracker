<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shared_ui_top_border_grey"
    android:orientation="horizontal"
    android:layout_marginHorizontal="16dp"
    >

    <TextView
        android:id="@+id/bar_graph_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Programming"
        android:textSize="12sp"
        android:maxLines="1"
        android:textColor="#000000"
        android:gravity="right|center"
        android:layout_weight="25"
        />
    <TextView
        android:layout_width="1dp"
        android:layout_height="21sp"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="2sp"
        android:background="@color/graph_line"
        android:layout_weight="0"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="75"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/bar_graph_colour_rect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/frag_trackers_level4_colour_rect"
            android:layout_weight="6"
            />
        <TextView
            android:id="@+id/bar_graph_blank_rect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>


</LinearLayout>

