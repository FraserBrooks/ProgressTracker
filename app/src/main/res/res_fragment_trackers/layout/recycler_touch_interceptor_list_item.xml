<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/recycler_touch_interceptor_list_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginStart="@dimen/spacing_small"
    android:layout_marginEnd="@dimen/spacing_small"
    android:layout_marginTop="@dimen/spacing_small"

    app:cardElevation="@dimen/list_item_elevation"

    app:cardCornerRadius="@dimen/list_item_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shared_ui_clickable_item_background_selector"

            android:baselineAligned="false"
            android:orientation="horizontal">


            <include
                layout="@layout/shared_ui_drag_and_drop_button"
                android:id="@+id/recycler_touch_interceptor_item_drag_and_drop_button"
                android:layout_width="@dimen/normal_item_height"
                android:layout_height="match_parent">

            </include>

            <FrameLayout
                android:id="@+id/recycler_touch_interceptor_item_frame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:paddingTop="@dimen/spacing_tiny"
                android:paddingStart="@dimen/spacing_tiny"
                android:paddingEnd="@dimen/spacing_tiny"

                >

            </FrameLayout>


        </LinearLayout>


</androidx.cardview.widget.CardView>


