<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/day_item_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dayLabel"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/calendar_day_target_icon_1"
        android:layout_width="16dp"
        android:layout_height="8dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/shared_ui_tick_symbol_black"
        tools:background="@drawable/frag_trackers_level2_colour_rect" />

    <ImageView
        android:id="@+id/calendar_day_target_icon_2"
        android:layout_width="16dp"
        android:layout_height="8dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/shared_ui_tick_symbol_black"
        tools:background="@drawable/frag_trackers_level4_colour_rect" />

    <ImageView
        android:id="@+id/calendar_day_target_icon_3"
        android:layout_width="16dp"
        android:layout_height="8dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/shared_ui_tick_symbol_black"
        tools:background="@drawable/frag_trackers_level3_colour_rect" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/nextMonthDayColor" />

</LinearLayout>

