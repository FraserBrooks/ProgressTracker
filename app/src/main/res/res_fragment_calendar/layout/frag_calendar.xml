<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendar_screen_container"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fraserbrooks.progresstracker.MainActivity"
    tools:background="?page_background_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.fraserbrooks.progresstracker.calendar.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            app:header_color="?page_background_color"
            app:header_label_color="?theme_text_color"

            app:today_label_color="?color_accent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="?menu_item_color"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/calendar_fragment_set_text_view"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content" />

                <ImageView
                    style="@style/calendar_fragment_small_drawable"
                    android:src="?level3_color" />

                <TextView
                    style="@style/calendar_fragment_target_text_view"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shared_ui_spinner_background"

                style="@style/default_spinner_with_vertical_margins">

                <Spinner
                    android:id="@+id/calendar_spinner_1"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="4dp"

                    tools:entries="@array/target_periods"
                    tools:listitem="@layout/shared_ui_spinner_item" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/calendar_fragment_set_text_view"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content" />

                <ImageView

                    style="@style/calendar_fragment_small_drawable"

                    android:background="?level4_color" />

                <TextView
                    style="@style/calendar_fragment_target_text_view"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shared_ui_spinner_background"

                style="@style/default_spinner_with_vertical_margins">

                <Spinner
                    android:id="@+id/calendar_spinner_2"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="4dp"

                    tools:entries="@array/target_periods"
                    tools:listitem="@layout/shared_ui_spinner_item" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/calendar_fragment_set_text_view"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content" />

                <ImageView

                    style="@style/calendar_fragment_small_drawable"
                    android:src="?level6_color" />

                <TextView
                    style="@style/calendar_fragment_target_text_view"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shared_ui_spinner_background"

                style="@style/default_spinner_with_vertical_margins">

                <Spinner
                    android:id="@+id/calendar_spinner_3"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="4dp"

                    tools:entries="@array/target_periods"
                    tools:listitem="@layout/shared_ui_spinner_item" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
