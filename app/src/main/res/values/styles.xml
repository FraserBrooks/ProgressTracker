    <style name="small_text_appearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?theme_text_color</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="regular_text_appearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?theme_text_color</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="large_text_appearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?theme_text_color</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="title_text_appearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?theme_text_color</item>
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="level_text_appearance" parent="TextAppearance.AppCompat">

        <item name="android:textColor">?theme_icon_text_color</item>
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textStyle">bold</item>

        <item name="android:shadowColor">?theme_shadow_color</item>
        <item name="android:shadowRadius">20.0</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>


    </style>

    <style name="default_button">
        <item name="android:background">@drawable/shared_ui_button_background_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">?theme_text_color</item>
        <item name="android:layout_height">@dimen/spinner_and_button_height</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="default_spinner" >
        <item name="android:layout_width">@dimen/graph_height_small</item>
        <item name="android:layout_height">@dimen/graph_height_small</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>
    </style>

    <style name="default_spinner_with_vertical_margins" parent="default_spinner">
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>

    <style name="calendar_fragment_set_text_view" parent="large_text_appearance">
        <item name="android:text">@string/set</item>
    </style>

    <style name="calendar_fragment_target_text_view" parent="large_text_appearance">
        <item name="android:text">@string/target</item>
    </style>

    <style name="calendar_fragment_small_drawable">
        <item name="android:layout_width">@dimen/small_icon_height</item>
        <item name="android:layout_height">@dimen/small_icon_height</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>

</resources>
