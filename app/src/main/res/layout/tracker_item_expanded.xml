<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/expanded_dabble_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_border_bar"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="8dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/expanded_tracker_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8">
                <TextView
                    android:id="@+id/expanded_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guitar Practice"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:id="@+id/expanded_quantifier_two_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- 1800 minutes"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/expanded_name_tv"
                    app:layout_constraintStart_toStartOf="@id/expanded_name_tv"/>
                <TextView
                    android:id="@+id/expanded_quantifier_one_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- 30 hours"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/expanded_quantifier_two_tv"
                    app:layout_constraintStart_toStartOf="@id/expanded_name_tv"/>
                <TextView
                    android:id="@+id/expanded_count_to_max_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" /XXX to master"
                    android:textSize="12sp"
                    android:paddingLeft="4dp"
                    app:layout_constraintTop_toBottomOf="@id/expanded_quantifier_two_tv"
                    app:layout_constraintStart_toEndOf="@id/expanded_quantifier_one_tv" />
            </android.support.constraint.ConstraintLayout>
            <!-- Level indicator icon -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/expanded_level_indicator_icon"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2">
                <ImageView
                    android:id="@+id/expanded_gem_bitmap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gem_blank"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"/>

                <!-- Level Text Box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="4">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"/>
                        <TextView
                            android:id="@+id/expanded_text_level"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:textColor="@color/textLevelOverlay"
                            android:textStyle="bold"
                            android:layout_weight="4"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>

                </LinearLayout>



            </android.support.constraint.ConstraintLayout>
        </LinearLayout>


        <!--  progress bar -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/layout_top"
            app:layout_constraintStart_toStartOf="@id/layout_top"
            app:layout_constraintEnd_toEndOf="parent">


            <LinearLayout
                android:id="@+id/expanded_prog_bar_rects"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/expanded_filled_rect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/top_border_grey"
                    android:layout_weight="0.6"/>
                <TextView
                    android:id="@+id/expanded_not_filled_rect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_rectangle"
                    android:layout_weight="0.4"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/expanded_prog_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:paddingBottom="2dp"
                android:src="@drawable/progress_bar_t3"
                />
        </android.support.constraint.ConstraintLayout>



    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/expanded_lower_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/expanded_tracker_layout_top">
        <LinearLayout
            android:id="@+id/top_row_buttons"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="14dp">
            <Button
                android:id="@+id/top_button_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/start_timer"
                android:textSize="12sp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/top_button_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/plus_15_minutes"
                android:textSize="12sp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/top_button_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/plus_1_hour"
                android:textSize="12sp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/top_button_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/plus_other"
                android:textSize="12sp"
                android:background="@drawable/button_background"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputs_for_custom_add_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/top_row_buttons"
            app:layout_constraintStart_toStartOf="@id/top_row_buttons"
            app:layout_constraintEnd_toEndOf="@id/top_row_buttons"
            android:visibility="gone">
            <EditText
                android:id="@+id/add_hour_etv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/hours"
                android:inputType="numberPassword"
                android:nextFocusDown="@id/add_minutes_etv"
                android:imeOptions="actionNext"/>
            <EditText
                android:id="@+id/add_minutes_etv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/minutes"
                android:inputType="numberPassword"
                android:imeOptions="actionDone"/>
            <Button
                android:id="@+id/add_time_from_text_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/add"
                android:textSize="12sp"
                android:background="@drawable/button_background" />
        </LinearLayout>

        <TextView
            android:id="@+id/edit_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:textSize="16sp"
            android:text="@string/edit_name"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/inputs_for_custom_add_layout"
            app:layout_constraintStart_toStartOf="@id/top_row_buttons"/>

        <LinearLayout
            android:id="@+id/name_etv_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/edit_name_tv"
            app:layout_constraintStart_toStartOf="@id/top_row_buttons"
            app:layout_constraintEnd_toEndOf="@id/top_row_buttons">
            <EditText
                android:id="@+id/name_etv"
                android:layout_width="0dp"
                android:layout_height= "wrap_content"
                android:layout_weight="8"
                android:maxLines="1"
                android:maxLength="20"
                android:hint="@string/guitar_practice"
                android:textSize="16sp"
                android:imeOptions="actionDone"
                android:inputType="textVisiblePassword"/>
            <Button
                android:id="@+id/edit_name_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="12sp"
                android:text="@string/update"
                android:background="@drawable/button_background"/>
        </LinearLayout>

        <TextView
            android:id="@+id/edit_difficulty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:textSize="16sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/name_etv_layout"
            app:layout_constraintStart_toStartOf="@id/top_row_buttons"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="0dp"
            android:paddingTop="14dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/gem_black"
            app:layout_constraintStart_toEndOf="@id/edit_difficulty_tv"
            app:layout_constraintTop_toTopOf="@id/edit_difficulty_tv"
            app:layout_constraintBottom_toBottomOf="@id/edit_difficulty_tv"
            android:scaleType="fitCenter"
            android:layout_marginStart="8dp" />

        <LinearLayout
            android:id="@+id/difficulty_spinner_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/edit_difficulty_tv"
            app:layout_constraintStart_toStartOf="@id/edit_name_tv"
            app:layout_constraintEnd_toEndOf="@id/top_row_buttons">
            <Spinner
                android:id="@+id/max_count_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@drawable/grey_border_rounded">
                <!--android:entries="@array/tracker_count_strings"-->
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/custom_max_count_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/difficulty_spinner_layout"
            app:layout_constraintStart_toStartOf="@id/top_row_buttons"
            app:layout_constraintEnd_toEndOf="@id/top_row_buttons"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textSize="18sp"
                android:text="@string/custom___"
                android:textAlignment="textEnd"
                android:gravity="end" />
            <EditText
                android:id="@+id/add_custom_max_count_etv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="@string/hours"
                android:inputType="numberPassword"
                android:nextFocusDown="@id/sub_minutes_etv"
                android:imeOptions="actionDone"/>
            <Button
                android:id="@+id/commit_custom_max_count_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="12sp"
                android:text="@string/update"
                android:background="@drawable/button_background"/>
        </LinearLayout>

        <TextView
            android:id="@+id/edit_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:textSize="16sp"
            android:text="@string/edit_label"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/custom_max_count_layout"
            app:layout_constraintStart_toStartOf="@id/top_row_buttons"/>

        <LinearLayout
            android:id="@+id/label_etv_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/edit_label_tv"
            app:layout_constraintStart_toStartOf="@id/top_row_buttons"
            app:layout_constraintEnd_toEndOf="@id/top_row_buttons">
            <EditText
                android:id="@+id/label_etv"
                android:layout_width="0dp"
                android:layout_height= "wrap_content"
                android:layout_weight="8"
                android:maxLines="1"
                android:maxLength="20"
                android:hint="@string/paintings"
                android:textSize="16sp"
                android:imeOptions="actionDone"
                android:inputType="textVisiblePassword"/>
            <Button
                android:id="@+id/edit_label_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="12sp"
                android:text="@string/update"
                android:background="@drawable/button_background"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottom_row_buttons"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/edit_label_tv"
            android:layout_margin="14dp">
            <Button
                android:id="@+id/bottom_button_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/remove_this_tracker"
                android:textSize="12sp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/bottom_button_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/_15_minutes"
                android:textSize="12sp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/bottom_button_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/_1_hour"
                android:textSize="12sp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/bottom_button_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/other"
                android:textSize="12sp"
                android:background="@drawable/button_background"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputs_for_custom_subtract_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_row_buttons"
            app:layout_constraintStart_toStartOf="@id/top_row_buttons"
            app:layout_constraintEnd_toEndOf="@id/top_row_buttons"
            android:visibility="gone">
            <EditText
                android:id="@+id/sub_hour_etv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/hours"
                android:inputType="numberPassword"
                android:nextFocusDown="@id/sub_minutes_etv"
                android:imeOptions="actionNext"/>
            <EditText
                android:id="@+id/sub_minutes_etv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/minutes"
                android:inputType="numberPassword"
                android:imeOptions="actionDone"/>
            <Button
                android:id="@+id/sub_time_from_text_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Subtract"
                android:textSize="12sp"
                android:background="@drawable/button_background" />
        </LinearLayout>



    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>