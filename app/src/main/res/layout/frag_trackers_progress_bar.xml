<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/progress_bar_height">

    <LinearLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp">

        <View
            android:id="@+id/progress_bar_filled_part"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            tools:background="?level3_color_mid" />

        <View
            android:id="@+id/progress_bar_not_filled_part"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="?page_background_color" />
    </LinearLayout>

    <ImageView
        android:id="@+id/progress_bar_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/progress_bar"
        android:scaleType="fitXY"
        android:src="@drawable/shared_ui_progress_bar_t3" />

</FrameLayout>
